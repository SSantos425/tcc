    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <div>
          <h1> Novo Produto </h1>
        </div>
      </div>
      <div class="card-body">     
        <%= form_with model: @produto do |form| %>
          <div class="form-group">
            <%= form.label :nome , "Nome"%>
            <%= form.text_field :nome, class: 'form-control', placeholder: 'Nome do Produto' %>
            <% @produto.errors.full_messages_for(:nome).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :unidade, "Unidade" %>
            <%= form.text_field :unidade, class: 'form-control', placeholder: 'Unidade' %>
            <% @produto.errors.full_messages_for(:unidade).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :preco, "Preço de Venda" %>
            <%= form.number_field :preco, step: 0.01, class: 'form-control', placeholder: 'Preço de Venda' %>
            <% @produto.errors.full_messages_for(:preco).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="form-group">
            <%= form.label :preco_compra, "Preço de Compra" %>
            <%= form.number_field :preco_compra, step: 0.01, class: 'form-control', placeholder: 'Preço de Compra ' %>
            <% @produto.errors.full_messages_for(:preco_compra).each do |message| %>
              <div style="color: red;"><%= "Campo não preenchido"%></div>
            <% end %>
          </div>

          <div class="mt-3">
            <%= form.submit 'Salvar', class: 'btn btn-block btn-primary' %>
          </div>
        <% end %>
      </div>
      <!-- /.card-body -->
    </div>
<!-- /.card -->