<div class="card card-outline card-primary larger-card">
    <div class="card-header text-center">
        <h1><i class="fas fa-user"></i> Detalhes do Cliente</h1>
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="card col-md-5">
                <div class="form-group">
                    <label for="tipoCliente">Tipo do Cliente:</label>
                    <div id="tipoCliente"><%= @cliente.tipo_cliente %></div>
                </div>

                <div class="form-group">
                    <label for="nome">Nome:</label>
                    <div id="nome"><%= @cliente.nome %></div>
                </div>

                <div class="form-group" style="display: none;">
                    <label for="cpf">CPF:</label>
                    <div id="cpf"><%= @cliente.cpf %></div>
                </div>

                <div class="form-group">
                    <label for="cnpj">CNPJ:</label>
                    <div id="cnpj"><%= @cliente.cnpj %></div>
                </div>

                <div class="form-group">
                    <label for="inscricaoEstadual">Inscrição Estadual:</label>
                    <div id="inscricaoEstadual"><%= @cliente.inscricao_estadual %></div>
                </div>

                <div class="form-group">
                    <label for="inscricaoMunicipal">Inscrição Municipal:</label>
                    <div id="inscricaoMunicipal"><%= @cliente.inscricao_municipal %></div>
                </div>

                <div class="form-group">
                    <label for="ramoAtividade">Ramo de Atividade:</label>
                    <div id="ramoAtividade"><%= @cliente.ramo_de_atividade %></div>
                </div>

                <div class="form-group">
                    <label for="codIbge">Código IBGE:</label>
                    <div id="codIbge"><%= @cliente.cod_ibge %></div>
                </div>
            </div>

            <div class="col-md-5">
                <div class="form-group">
                    <label for="cep">CEP:</label>
                    <div id="cep"><%= @cliente.cep %></div>
                </div>

                <div class="form-group">
                    <label for="logradouro">Logradouro:</label>
                    <div id="logradouro"><%= @cliente.logradouro %></div>
                </div>

                <div class="form-group">
                    <label for="bairro">Bairro:</label>
                    <div id="bairro"><%= @cliente.bairro %></div>
                </div>

                <div class="form-group">
                    <label for="localidade">Localidade:</label>
                    <div id="localidade"><%= @cliente.localidade %></div>
                </div>

                <div class="form-group">
                    <label for="uf">UF:</label>
                    <div id="uf"><%= @cliente.uf %></div>
                </div>

                <div class="form-group">
                    <label for="observacao">Observação:</label>
                    <div id="observacao"><%= @cliente.obs %></div>
                </div>
            </div>
        </div>
    </div>
</div>
