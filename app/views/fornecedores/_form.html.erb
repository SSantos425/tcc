<div class="card card-outline card-primary larger-card">
  <div class="card-header text-center">
    <div>
      <h1><i class="fa fa-building"></i> Novo Fornecedor</h1>
    </div>
  </div>
  <div class="card-body">
    <%= form_with model: @fornecedor, url: fornecedores_path, class: 'mb-3' do |form| %>
      <div class="form-group">
        <%= form.label :nome , "Nome" %>
          <%= form.text_field :nome, class: 'form-control' , placeholder: "Nome" %>
      </div>

      <div class="form-group">
        <%= form.label :endereco, "Endereço" %>
          <%= form.text_area :endereco, class: 'form-control' , placeholder: "Endereço" %>
      </div>

      <div class="form-group">
        <%= form.label :cnpj, "CNPJ" %>
          <%= form.text_field :cnpj, class: 'form-control' , placeholder:"CNPJ" %>
      </div>

      <div class="form-group">
        <%= form.label :insc_estadual, "Inscrição Estadual" %>
          <%= form.text_field :insc_estadual, class: 'form-control' , placeholder:"Inscrião Estadual" %>
      </div>

      <div class="mt-3">
        <%= form.submit 'Salvar' , class: 'btn btn-block btn-primary' %>
      </div>
      <% end %>
  </div>
  <!-- /.card-body -->
</div>
<!-- /.card -->