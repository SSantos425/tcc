
<div class="card card-outline card-primary "style="width: 30rem;">
  <div class="card-header text-center">
    <div>
      <h1>Abrir o Caixa</h1>
    </div>
  </div>

  <div class="card-body">
    <%= form_with(model: @wallet, local: true) do |form| %>
    <div class="row" style="justify-content: center;">
      <div class="col-md-5">
        <%= form.hidden_field :user_id ,value:current_user.id%>
        <div class="form-group">
            <%= form.label :balance, "Valor" %>
            <%= form.number_field :balance, step:0.01, class: 'form-control', placeholder: "Valor", step: 0.01, value: number_with_precision(@wallet.balance, precision: 2) %>

        </div>

        <div class="form-group">
          <%= form.label :data, "Data" %>
          <%= form.date_field :data, class: 'form-control', placeholder: "Data"  %>
        </div>

        <div class="form-group">
          <%= form.label :reforco, "ReforÃ§o" %>
          <%= form.number_field :reforco, step:0.01, class: 'form-control', placeholder: "reforco"  %>
        </div>


        <div class="actions">
          <%= form.submit 'Abrir', class: 'btn btn-block btn-primary'  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>