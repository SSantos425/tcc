<div class="card card-outline card-primary "style="width: 30rem;">
  <div class="card-header text-center">
    <div>
      <h1>Abrir o Caixa</h1>
    </div>
  </div>

  <div class="card-body">
    <%= form_with(model: @wallet, local: true) do |form| %>
    <div class="row" style="justify-content: center;">
      <div class="col-md-5">
        <%= form.hidden_field :user_id ,value:current_user.id%>
        <div class="form-group">
            <%= form.label :balance, "Valor" %>
            <%= form.number_field :balance, class: 'form-control', placeholder: "Valor"  %>
        </div>

        <div class="actions">
          <%= form.submit 'Abrir', class: 'btn btn-block btn-primary'  %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>