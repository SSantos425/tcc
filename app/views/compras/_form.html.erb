
    <div class="card card-outline card-primary larger-card">
      <div class="card-header text-center">
        <div>
          <h1>Nova Compra</h1>
        </div>
      </div>

      <div class="card-body">     
        <%= form_with model: @compra, class: 'mb-3' do |form| %>
          <div class="row" style="justify-content: center;">
            <div class="col-md-5">
             

              <div class="form-group">
                <%= form.label :fornecedor_id, "Fornecedor" %>
                <%= form.collection_select :fornecedor_id, Fornecedor.all, :id, :nome,
                  { include_blank: false, prompt: "Selecione o Fornecedor" },
                  class: 'form-control'
                %>
                <% @compra.errors.full_messages_for(:fornecedor_id).each do |message| %>
                  <div style="color: red;"><%= "Selecione um Fornecedor "%></div>
                <% end %>
              </div>
              
              

              <div class="form-group">
                <%= form.label :numero_nota, "Número da Nota" %>
                <%= form.number_field :numero_nota, step:0.01, class: 'form-control', placeholder: "Número da Nota" %>
                <% @compra.errors.full_messages_for(:numero_nota).each do |message| %>
                  <div style="color: red;"><%= "Digite o número da nota "%></div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :serie, "Série" %>
                <%= form.number_field :serie, step:0.01, class: 'form-control', placeholder: "Série" %>
                <% @compra.errors.full_messages_for(:serie).each do |message| %>
                  <div style="color: red;"><%= "Digite o número de série "%></div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :data_emissao, "Data de Emissão" %>
                <%= form.date_field :data_emissao, class: 'form-control', placeholder: "Data de Emissão" %>
                <% @compra.errors.full_messages_for(:data_emissao).each do |message| %>
                  <div style="color: red;"><%= "Selecione a data de Emissão "%></div>
                <% end %>
              </div>
            
              <div class="form-group">
                <%= form.label :data_recebimento, "Data de Recebimento" %>
                <%= form.date_field :data_recebimento, class: 'form-control', placeholder: "Data de Recebimento" %>
                <% @compra.errors.full_messages_for(:data_recebimento).each do |message| %>
                  <div style="color: red;"><%= "Selecione a data de Recebimento "%></div>
                <% end %>
              </div>
            </div>

            <div class="col-md-5">             
              <div class="form-group">
                <%= form.label :total_nota, "Total da Nota" %>
                <%= form.number_field :total_nota, step:0.01, class: 'form-control', placeholder: "Total da Nota" %>
                <% @compra.errors.full_messages_for(:total_nota).each do |message| %>
                  <div style="color: red;"><%= "Digite o valor total da nota "%></div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :total_produtos, "Total de Produtos" %>
                <%= form.number_field :total_produtos, step:0.01, class: 'form-control', placeholder: "Total de Produtos" %>
                <% @compra.errors.full_messages_for(:total_produtos).each do |message| %>
                  <div style="color: red;"><%= "Digite o valor total em produtos"%></div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :desconto, "Desconto" %>
                <%= form.number_field :desconto, step:0.01, class: 'form-control', placeholder: "Desconto" %>
                <% @compra.errors.full_messages_for(:desconto).each do |message| %>
                  <div style="color: red;"><%= "Digite o Desconto "%></div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :acrescimos, "Acréscimos" %>
                <%= form.number_field :acrescimos, step:0.01, class: 'form-control', placeholder: "Acréscimos" %>
                <% @compra.errors.full_messages_for(:acrescimos).each do |message| %>
                  <div style="color: red;"><%= "Digite os Acréscimos "%></div>
                <% end %>
              </div>

              <div class="form-group">
                <%= form.label :frete, "Frete" %>
                <%= form.number_field :frete, step:0.01, class: 'form-control', placeholder: "Frete" %>
                <% @compra.errors.full_messages_for(:frete).each do |message| %>
                  <div style="color: red;"><%= "Digite o Frete "%></div>
                <% end %>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <%= form.submit 'Salvar', class: 'btn btn-block btn-primary' %>
          </div>
        <% end %>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
