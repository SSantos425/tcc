<div class="card card-primary">
  <div class="card-header">
      <h3 class="card-title">Lista de Compras</h3>
  </div>
  <div class="card-body">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Nota</th>
          <th>Serie</th>
          <th>Data Emissao</th>
          <th>Data Recebimento</th>
          <th>Total da Nota</th>
          <th>Total Produtos</th>
          <th>Desconto</th>
          <th>Acrescimos</th>
          <th>Frete</th>
          <th>Ações</th>
        </tr>
      </thead>
      
      <tbody>
        <% @compras.each do |compra| %>
          <tr>
            <td><%= compra.numero_nota %></td>
            <td><%= compra.serie %></td>
            <td><%= compra.data_emissao %></td>
            <td><%= compra.data_recebimento %></td>
            <td><%= compra.total_nota %></td>
            <td><%= compra.total_produtos %></td>
            <td><%= compra.desconto %></td>
            <td><%= compra.acrescimos %></td>
            <td><%= compra.frete %></td>
            <td><%= link_to "Incluir Produtos", compra_path(compra), class: "btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
